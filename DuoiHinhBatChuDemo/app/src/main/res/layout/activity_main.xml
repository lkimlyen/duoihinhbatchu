<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context="com.example.yenyen.duoihinhbatchudemo.MainActivity">


    <com.facebook.login.widget.LoginButton

         android:layout_gravity="center_horizontal"
        android:id="@+id/btDangNhap"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:text="Đăng nhập Facebook"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="392dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_above="@+id/btChoiThu"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.FontPath"/>

    <ImageView
        android:id="@+id/ivNotiTangQua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/textnotitangqua"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/btDangNhap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btChoiThu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonchoithu"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btDangNhap"
        android:layout_alignStart="@+id/btDangNhap" />
</RelativeLayout>
